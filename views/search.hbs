<main class="home">
  <h1
    class="home__heading">
    {{#if noResults}}
      No Results
    {{else}}
      Search for houses and flats for sale across the UK
    {{/if}}
  </h1>
  {{#if noResults}}
  <p class="home__subheading">
    Enter another location and search again
  </p>
  {{/if}}

  <form
    class="form"
    method="GET"
    action="/results">
    <label
      class="form__label sr-only"
      for="query">
      Search query
    </label>
    <input
      class="form__control form__control--text"
      type="text"
      name="query"
      minlength="3"
      required>
    <button
      class="form__control form__control--submit"
      type="submit">
      Search
    </button>
  </form>
</main>
